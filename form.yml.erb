<%-
  groups = OodSupport::User.new.groups.sort_by(&:id).tap { |groups|
    groups.unshift(groups.delete(OodSupport::Process.group))
  }.map(&:name).grep(/.*[0-9]{5}/)
-%>

---
description: Request code-server
submit: submit.yml.erb
title: code-server

cluster: "my-k8s-cluster"

form:
  - account 
  - codeserver
  - bc_queue
  - bc_num_hours
  - num_cores
  - num_mem
  - node

attributes:
  account:    # Add this section
    label: "Project Code"
    widget: select
    options:
      <%- groups.each do |group| %>
      - "<%= group %>"
      <%- end %>
    required: true
  codeserver:
    widget: select
    label: "code-server Version"
    options:
      - [ "4.92.2", "code-server/4.92.2" ]
  node: ""
  bc_queue:
    value: interactive
  bc_num_hours:
    max: 8
    min: 1
    step: 1
    value: 1
    widget: number_field
  num_cores:
    label: Number of cores
    max: 16
    min: 1
    value: 2
    widget: number_field
  num_mem:
    label: Memory per job (GB)
    max: 32
    min: 1
    step: 1
    value: 1
    widget: number_field
